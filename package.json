{
  "name": "invisignia",
  "version": "1.0.0",
  "description": "Watermarking application with FastAPI and NextJS",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd api && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "concurrently \"npm run dev:api\" \"cd web && npm run dev -- -H 0.0.0.0\"",
    "install:web": "cd web && npm install",
    "install:api": "cd api && pip install -r requirements.txt",
    "setup": "npm run install:api && npm run install:web",
    "build:web": "cd web && npm run build",
    "start:web": "cd web && npm start",
    "test:e2e": "jest --testMatch='**/tests/**/*.test.js'",
    "test:e2e:watch": "jest --testMatch='**/tests/**/*.test.js' --watch",
    "test:e2e:ci": "NODE_ENV=ci jest --testMatch='**/tests/**/*.test.js'",
    "test:auth": "jest tests/e2e/auth.test.js",
    "test:upload": "jest tests/e2e/upload.test.js",
    "test:verify": "jest tests/e2e/verify.test.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "selenium-webdriver": "^4.15.0",
    "@types/selenium-webdriver": "^4.1.17",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "keywords": [
    "watermarking",
    "fastapi",
    "nextjs",
    "dct"
  ],
  "dependencies": {}
}
